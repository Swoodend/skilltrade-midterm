<div class='row'>

<div class='col-sm-4'>
    <h1><%=@user.username%>'s Profile</h1>

    <img id="" src='<%= @user.user_img %>'/>
    <h3>About</h3>
    <p><%=@user.blurb%></p>
  </div>

  <div class='col-sm-8'>
    <h2><%= @user.username %> wants to learn</h2>
    <ul>
      <% @user.learnable_skills.each{|skill| %>
      <li><%= skill.name %></li>
      <% } %>
    </ul>

    <h2><%= @user.username %> wants to teach</h2>
    <ul>
      <% @user.teachable_skills.each{|skill| %>
      <li> <%= skill.name%></li>
      <% } %>
    </ul>
  </div>
</div>
