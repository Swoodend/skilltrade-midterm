<h1>Register a New Account</h1>
<hr/>

<% if @user && @user.errors.any? %>
  <div>
    <strong>Some issues with your signup, please fix them:</strong>
      <% @user.errors.full_messages.each do |user| %>
        <p><li><%= user %></li></p>
      <% end %>
  </div>
<% end %>

<form class="form-horizontal" method="post" action="/users/new">
  <div class="form-group" id="credential_form">
    <label for="inputEmail3" class="col-sm-2 control-label">Username:</label>
    <div class="col-sm-10">
      <input type="text" name="username" value="<%= @user.username %>" class="form-control" placeholder="Username">
    </div>
  </div>
  <div class="form-group" id="credential_form">
    <label for="inputPassword3" class="col-sm-2 control-label">Email:</label>
    <div class="col-sm-10">
      <input type="email" value="<%= @user.email %>" name="email" class="form-control" placeholder="Email">
    </div>
  </div>
    <div class="form-group" id="credential_form">
    <label class="col-sm-2 control-label">Password:</label>
    <div class="col-sm-10">
      <input type="password" name="password" class="form-control" placeholder="Password">
    </div>
  </div>
  <div class="form-group" id="credential_form">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" value="Submit" class="btn btn-default">Register</button>
    </div>
  </div>
</form>
