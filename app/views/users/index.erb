
<div class="container">
  <div class="row">
    <h1> Users </h1>
    </hr>
    <div> 
        <form class="navbar-form" role="search" method="get">
          <div class="form-group">
            <input type="text" class="form-control" name="query" value="<%= @search %>" placeholder="Search">
          </div>
            <button type="submit" class="btn btn-default">Submit</button>
        </form>
    </div>
    <ul class="list-group">
        <% @users.all.each do |user| %>
          <li class="list-group-item">
            <div class="row">
              <div class="col-sm-1">
              </div>
              <div class="col-sm-11">
                <div class="">
                  <p><strong>Username: </strong><a href="<%= user.id %>" target="_blank"><%= user.username %></a></p>
                  <p><strong>Learnables: </strong><%= user.teachables %></a></p>
                </div>
              </div>
            </div>              
          </li>
        <% end %>
    </ul>
  </div>
</div>
