<% if @user.nil? %>
  <div>
    <li> There is no account with those credentials</li>
  </div>
<% end %>

<form method="post" action="/session/new">
  <h2 class="form-signin-heading">Please sign in</h2>
  
  <label for="inputEmail" class="sr-only">Email address</label>
  <input type="text" name="email" id="inputEmail" class="form-control" placeholder="Email address" autofocus>
        
  <label for="inputPassword" class="sr-only">Password</label>
  <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password">
        

  <input id="purplelogin" class="btn btn-lg btn-primary" type="submit" value="Login">
</form>
